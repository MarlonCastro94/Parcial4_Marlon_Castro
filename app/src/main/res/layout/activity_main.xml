<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtidcliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese ID_Cliente:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtnombrecliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese Nombre Cliente:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtapellidocliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese Apellido Cliente:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtdireccioncliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Direccion Cliente:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtciudadcliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese Ciudad Cliente:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtidvehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese ID_Vehiculo:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtmatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese Matricula:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtkilometros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese Kilometros:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtmarcavehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese Marca de Vehiculo:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtmodelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese Modelo de vehiculo:"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSERTAR" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MODIFICAR" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ELIMINAR" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>